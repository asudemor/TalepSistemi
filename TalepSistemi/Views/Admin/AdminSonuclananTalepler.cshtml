@model IEnumerable<Talep>

@{
    ViewData["Title"] = "Sonuçlanan Talepler Sayfası";
    Layout = "_Layout2";
}
<h1>@ViewData["Title"]</h1>


<div>
    <p>Sonuçlanan Talepler</p>
</div>

<table class="table table-hover mt-3">
    <thead>
    <th>Gönderen</th>
    <th>Departman</th>
    <th>Konu</th>
    <th>Tarih</th>
    <th>İşlemler</th>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td> @item.TalepGonderen</td>
            <td> @item.TalepDepartman</td>
            <td> @item.TalepKonu</td>
            <td> @item.TalepTarih</td>
            <td>
                <button type="button" class="btn btn-outline-secondary" data-toggle="modal" data-target="#modal@(item.TalepID)">
                    DETAY
                </button>
                <div class="modal fade" id="modal@(item.TalepID)" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <h4 class="text-dark">AÇIKLAMA</h4>
                                <h6 class="modal-title" id="exampleModalLabel">@(item.TalepAciklama)</h6><hr />
                                <h4 class="text-dark">EKLENTİ</h4>
                                <img src="/resimler/@item.ImageUrl" alt="Resim görüntülenemiyor." style="max-height: 200px;" />

                            </div>
                        </div>
                    </div>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>


