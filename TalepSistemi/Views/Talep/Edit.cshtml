@model Talep

@{
    ViewData["Title"] = "Düzenleme Sayfası";
}
<h1>@ViewData["Title"]</h1>

<form asp-action="Edit">
    <div class="form-group">
        <label for="id">ID</label>
        <input asp-for="TalepID" readonly type="text" class="form-control" id="id">
    </div>
    <div class="form-group">
        <label for="konu">Konu</label>
        <input asp-for="TalepKonu" type="text" class="form-control" id="konu" aria-describedby="konuHelp">
        <small id="konuHelp" class="form-text text-muted">Telebin konusu girilmelidir.</small>
    </div>
    <div class="form-group">
        <label for="aciklama">Açıklama</label>
        <input asp-for="TalepAciklama" type="text" class="form-control" id="aciklama" aria-describedby="aciklamaHelp">
        <small id="aciklamaHelp" class="form-text text-muted">Telebin açıklaması girilmelidir.</small>
    </div>
    <div class="form-group">
        <label for="resim">Resim</label>
        <input asp-for="ImageUrl" type="text" placeholder="Resmin yolunu giriniz" class="form-control" id="resim">
    </div>

    <div class="modal-footer">
        <a asp-action="BekleyenTalep" class="btn btn-secondary">VAZGEÇ</a>
        <button type="submit" class="btn btn-primary">KAYDET</button>
    </div>
</form>
